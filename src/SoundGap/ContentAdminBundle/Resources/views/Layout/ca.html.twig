{% extends 'SoundGapContentAdminBundle:Layout:base.html.twig' %}

{% block title %} : Content Admin{% endblock %}

{% block scripts %}
<script type="text/javascript" src="/content_admin/scripts/less-1.6.2.min.js"></script>
<script type="text/javascript" src="/content_admin/bower_components/jquery/jquery.min.js"></script>
<script type="text/javascript" src="/content_admin/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<script type="text/javascript">
$(function() {
  $(".alert").alert();
})
</script>
{% endblock %}

{% block styles %}
<link rel="stylesheet" type="text/less" href="/content_admin/styles/main.less">
{% endblock %}

{% block body %}
<div id='navbar' class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="{{path('soundgap_ca_homepage')}}">SoundGap Content Admin</a>
      {% if pageName is defined %}
        <span class="navbar-brand" > : {% block pageName %}{{pageName|humanize}}{% endblock %}</span>
      {% endif %}
    </div>
  </div>
</div>

{% if app.session.flashbag.has('notice') %}
<div id='flashbag'>
  <div id='flash' class="alert alert-warning fade in">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <ul>
    {% for flashMessage in app.session.flashbag.get('notice') %}
      <li>{{ flashMessage }}</li>
    {% endfor %}
  </ul>
  </div>
</div>
{% endif %}

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2" id="sidebar">
    {% block mainnav %}
      <nav>
        <ul class="nav nav-sidebar">
          <li>
            <span>Main Course</span>
            <ul class="nav nav-sidebar">
              <li><a href="{{path("soundgap_ca_main_point")}}">Point</a></li>
              <li><a href="{{path("soundgap_ca_main_pointPath")}}"><span>PointPath</span></a></li>
            </ul>
          </li>
          <li>
            <span>Parts</span>
            <ul class="nav nav-sidebar">
              <li><a href="{{path("soundgap_ca_parts_quest")}}"><span>Quest</span></a></li>
              <li><a href="{{path("soundgap_ca_parts_appetizer")}}"><span>Appetizer</span></a></li>
              <li><a href="{{path("soundgap_ca_parts_characterPose")}}"><span>CharacterPose</span></a></li>
            </ul>
          </li>
          <li>
            <span>Ground</span>
            <ul class="nav nav-sidebar">
              <li><a href="{{path("soundgap_ca_ground_character")}}"><span>Character</span></a></li>
              <li><a href="{{path("soundgap_ca_ground_pose")}}"><span>Pose</span></a></li>
              <li><a href="{{path("soundgap_ca_ground_grade")}}"><span>Grade</span></a></li>
              <li><a href="{{path("soundgap_ca_ground_category")}}"><span>Category</span></a></li>
              <li><a href="{{path("soundgap_ca_media_image")}}"><span>Image</span></a></li>
              <li><a href="{{path("soundgap_ca_media_audio")}}"><span>Audio</span></a></li>
              <li><a href="{{path("soundgap_ca_ground_tag")}}"><span>Tag</span></a></li>
            </ul>
          </li>
        </ul>
      </nav>
    {% endblock %}
    </div>
    <div class="col-sm-9 col-md-10 main">
      {% block content %}
      {% endblock %}
    </div>
  </div>
</div>
{% endblock %}