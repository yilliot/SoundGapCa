{% extends 'SoundGapContentAdminBundle:Layout:ca.html.twig' %}

{% block title %}{{pageName|capitalize}}{{parent()}}{% endblock %}


{% block content %}
<div class='col-sm-7'>
  <h2>{{pageName|capitalize}} List</h2>
  <table class="table">
  <thead>
    <tr>
      <th>Code</th>
      <th>Icon</th>
      <th>Actions</th>
    </tr>
  </thead>
  {% for emoticon in emoticons %}
    <tr>
      <td>{{emoticon.code}}</td>
      <td><img class='img-thumbnail' src="/{{emoticon.icon.webPath}}"></td>
      <td>
        <div>
          <a class='label label-warning' href="{{path('soundgapca_asset_emoticon_update',{'id':emoticon.id})}}"> update </a>
        </div>
        <div>
          <a class='label label-danger' href="{{path('soundgapca_asset_emoticon_delete',{'id':emoticon.id})}}" onclick="return confirm('sure bo?')"> delete </a>
        </div>
      </td>
    </tr>
  {% endfor %}
  </table>
</div>

<div class='col-sm-5'>
<h2>{{actionName|humanize}} {{pageName|humanize}}</h2>
{{ form_start(form, {'method': 'POST','attr':{'class':'form-horizontal','role':'form'}}) }}
{{ form_end(form) }}
</div>
{% endblock %}